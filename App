<script>
    // CONFIGURATION FIREBASE
    const firebaseConfig = {
        apiKey: "AIzaSyAtsxQHvSBIVvjjAA53BWN3pBdV58hMJEk",
        authDomain: "pack-n-go-app.firebaseapp.com",
        databaseURL: "https://pack-n-go-app-default-rtdb.firebaseio.com",
        projectId: "pack-n-go-app",
        storageBucket: "pack-n-go-app.firebasestorage.app",
        messagingSenderId: "440398074655",
        appId: "1:440398074655:web:69ed87e2566fab0d50562a"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();

    let courses = [];
    let staff = {};
    let logs = [];
    let userSession = "Deconnecte";
    let activeAdminName = ""; 
    let isAdminMode = false;
    let isAdminPrincipal = false;

    document.getElementById('dateRef').valueAsDate = new Date();

    // √âCOUTE FIREBASE EN TEMPS R√âEL
    db.ref('staff').on('value', snap => {
        staff = snap.val() || { "Admin": { mdp: "0612", role: "admin" } };
        refreshAll();
    });

    db.ref('courses').on('value', snap => {
        courses = [];
        snap.forEach(child => { courses.unshift({id: child.key, ...child.val()}); });
        refreshAll();
    });

    db.ref('logs').limitToFirst(50).on('value', snap => {
        logs = [];
        snap.forEach(child => { logs.unshift(child.val()); });
        refreshAll();
    });

    function tracerAction(action) {
        const entry = { date: new Date().toLocaleString('fr-FR'), auteur: activeAdminName || "Syst√®me", details: action };
        db.ref('logs').push(entry);
    }

    function authAdmin() {
        if(isAdminMode) { location.reload(); } else {
            let p = prompt("CODE ACC√àS :"); if(!p) return;
            if(p === "0612") { isAdminPrincipal = true; activeAdminName = "Admin Principal"; isAdminMode = true; document.getElementById('btnNavRH').classList.remove('hidden'); }
            else {
                let found = Object.keys(staff).find(u => staff[u].mdp === p && staff[u].role === 'admin');
                if(found) { isAdminPrincipal = false; activeAdminName = found; isAdminMode = true; document.getElementById('btnNavRH').classList.add('hidden'); }
                else { alert("Acc√®s refus√©"); return; }
            }
            document.getElementById('sectionAdmin').classList.remove('hidden');
            document.getElementById('sectionLivreur').classList.add('hidden');
            document.getElementById('btnAdmin').innerText = "D√âCONNEXION";
            refreshAll();
        }
    }

    function switchTab(tabId) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.add('hidden'));
        document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(tabId).classList.remove('hidden');
        event.currentTarget.classList.add('active');
        refreshAll();
    }

    function ajouterRH() {
        const n = document.getElementById('rh_nom').value.trim(), c = document.getElementById('rh_code').value, r = document.getElementById('rh_role').value;
        if(n && c && r) {
            db.ref('staff/' + n).set({ mdp: c, role: r });
            tracerAction(`Ajout personnel : ${n}`);
            document.getElementById('rh_nom').value = ''; document.getElementById('rh_code').value = '';
        }
    }

    function supprRH(n) { 
        if(confirm(`Supprimer ${n} ?`)) { 
            db.ref('staff/' + n).remove();
            tracerAction(`Suppression personnel : ${n}`); 
        } 
    }

    function creerCourse() {
        const c = document.getElementById('c_client').value, t = document.getElementById('c_tarif').value, d = document.getElementById('c_dest').value, l = document.getElementById('c_livreur').value, h = document.getElementById('c_heure').value;
        if(c && t) {
            db.ref('courses').push({ 
                date: new Date().toISOString().split('T')[0], 
                client: c, dest: d, tarif: parseInt(t), 
                livreur: l, heure: h, statut: 'Attente', modifiee: false 
            });
            tracerAction(`Cr√©ation course : ${c}`);
            annulerModif();
        }
    }

    function modifierCourse(id) {
        let c = courses.find(item => item.id === id); if(!c) return;
        document.getElementById('c_client').value = c.client; document.getElementById('c_dest').value = c.dest;
        document.getElementById('c_tarif').value = c.tarif; document.getElementById('c_livreur').value = c.livreur;
        document.getElementById('c_heure').value = c.heure || "";
        document.getElementById('formActionContainer').innerHTML = `<button class="btn btn-orange" onclick="sauvegarderModif('${id}')">METTRE √Ä JOUR</button><button class="btn btn-black" style="background:#888" onclick="annulerModif()">ANNULER</button>`;
        window.scrollTo({ top: 0, behavior: 'smooth' });
    }

    function sauvegarderModif(id) {
        const clientNom = document.getElementById('c_client').value;
        let c = courses.find(item => item.id === id);
        let nouveauStatut = (c.statut === 'Non Livr√©') ? 'Attente' : c.statut;
        
        db.ref('courses/' + id).update({
            client: clientNom, 
            dest: document.getElementById('c_dest').value, 
            tarif: parseInt(document.getElementById('c_tarif').value), 
            livreur: document.getElementById('c_livreur').value, 
            heure: document.getElementById('c_heure').value,
            statut: nouveauStatut,
            modifiee: true
        });
        
        tracerAction(`Modif/Reprog course : ${clientNom}`); 
        annulerModif();
    }

    function annulerModif() {
        document.getElementById('c_client').value = ''; document.getElementById('c_dest').value = ''; document.getElementById('c_tarif').value = ''; document.getElementById('c_heure').value = '';
        document.getElementById('formActionContainer').innerHTML = `<button class="btn btn-black" onclick="creerCourse()">PROGRAMMER</button>`;
        refreshAll();
    }

    function supprimerCourse(id) { 
        if(confirm("Supprimer cette course ?")) { 
            db.ref('courses/' + id).remove();
        } 
    }

    function connexionLivreur() {
        const s = document.getElementById('loginLivreur'); if(s.value === "Tous") { userSession = "Deconnecte"; refreshAll(); return; }
        if(prompt(`CODE ${s.value} :`) === staff[s.value].mdp) {
            userSession = s.value;
            refreshAll();
        } else {
            s.value = "Tous"; refreshAll();
        }
    }

    function deconnexion() { if(isAdminMode) location.reload(); else { userSession = "Deconnecte"; document.getElementById('loginLivreur').value = "Tous"; refreshAll(); } }

    function changerStatut(id, s) {
        if(confirm("Confirmer le statut ?")) {
            db.ref('courses/' + id).update({ statut: s });
        }
    }

    function refreshAll() {
        const l_rh = document.getElementById('listeRH'), s_rh = document.getElementById('c_livreur'), s_log = document.getElementById('loginLivreur'), live = document.getElementById('suiviLive'), l_liv = document.getElementById('listeCoursesLivreur'), statusArea = document.getElementById('sessionStatus'), logCard = document.getElementById('loginCard');
        const aujourdhui = new Date().toISOString().split('T')[0];
        
        if(l_rh) l_rh.innerHTML = ''; 
        s_rh.innerHTML = '<option>NON ASSIGN√â</option>'; 
        s_log.innerHTML = '<option value="Tous">-- IDENTIFIEZ-VOUS --</option>'; 
        live.innerHTML = ''; l_liv.innerHTML = '';

        if(isAdminMode) {
            const nomAffich√© = (activeAdminName === "Admin Principal") ? activeAdminName : `ADMIN : ${activeAdminName}`;
            statusArea.innerHTML = `<div class="session-badge" style="justify-content: center;"><div class="session-info" style="text-align: center;"><span class="session-label">${nomAffich√©}</span><span class="session-count">Contr√¥le Dashboard</span></div></div>`;
            logCard.classList.add('hidden');
        } else if(userSession !== "Deconnecte") {
            const score = courses.filter(c => c.livreur === userSession && c.statut === 'Livr√©' && c.date === aujourdhui).length;
            statusArea.innerHTML = `
                <div class="session-badge" style="flex-direction: row; justify-content: space-between; align-items: center; width: 100%;">
                    <div class="session-info" style="text-align: left; align-items: flex-start;">
                        <span class="session-label">LIVREUR : ${userSession}</span>
                        <span class="session-count">Livr√©e(s) aujourd'hui : ${score}</span>
                    </div>
                    <span class="logout-link" onclick="deconnexion()" style="margin-top: 0;">D√©connexion</span>
                </div>`;
            logCard.classList.add('hidden');
        } else { statusArea.innerHTML = ''; logCard.classList.remove('hidden'); }

        for(let u in staff) {
            if(u === "Admin") continue;
            let rLabel = staff[u].role === 'admin' ? 'Admin' : (staff[u].role === 'livreur_packngo' ? 'Interne' : 'Externe');
            if(l_rh) l_rh.innerHTML += `<div class="user-tag"><b>${u}</b><span style="color:#888; font-size:0.6rem;">${rLabel}</span><div onclick="supprRH('${u}')" style="color:var(--accent);cursor:pointer;font-size:1.1rem">√ó</div></div>`;
            if(staff[u].role.startsWith('livreur')) { s_rh.innerHTML += `<option value="${u}">${u}</option>`; s_log.innerHTML += `<option value="${u}">${u}</option>`; }
        }
        
        document.getElementById('countCourses').innerText = courses.length;

        courses.forEach(c => {
            let sClass = c.statut === 'Livr√©' ? 's-livre' : (c.statut === 'En cours' ? 's-cours' : (c.statut === 'Non Livr√©' ? 's-echec' : 's-attente'));
            let hLabel = c.heure ? `<span style="color:var(--accent); margin-left:8px;">${c.heure}</span>` : '';
            let modIcon = c.modifiee ? `<span style="margin-right:5px; font-size:0.8rem; color:var(--process)" title="Course modifi√©e/reprogramm√©e">üîÑ</span>` : "";

            let actions = (isAdminMode && c.statut !== 'Livr√©') ? 
                `<div style="display: flex; gap: 10px; margin-left: 10px; font-size: 1rem; align-items: center;">
                    <span onclick="modifierCourse('${c.id}')" style="cursor:pointer;" title="Modifier">üìù</span>
                    <span onclick="supprimerCourse('${c.id}')" style="cursor:pointer;" title="Supprimer">üóëÔ∏è</span>
                </div>` : '';
            
            live.innerHTML += `
                <div class="suivi-row">
                    <div class="suivi-info">
                        <span class="suivi-client">${c.client}${hLabel}</span>
                        <span class="suivi-sub">${c.livreur} ‚Ä¢ ${c.tarif} F</span>
                    </div>
                    <div style="display: flex; align-items: center;">
                        ${modIcon}
                        <span class="statut-pill ${sClass}">${c.statut}</span>
                        ${actions}
                    </div>
                </div>`;
            
            if(userSession !== "Deconnecte" && c.livreur === userSession && c.statut !== 'Livr√©' && c.statut !== 'Non Livr√©') {
                let content = `<div class="livreur-line"><span class="livreur-client-name">${c.client}${c.heure ? '<span style="color:var(--accent);margin-left:5px">'+c.heure+'</span>' : ''}</span><span class="livreur-loc">üìç ${c.dest}</span></div>`;
                content += (c.statut === 'Attente') ? `<button class="btn btn-orange" onclick="changerStatut('${c.id}', 'En cours')">ACCEPTER LA COURSE</button>` : `<div style="display:flex; gap:10px;"><button class="btn btn-green" style="flex:2" onclick="changerStatut('${c.id}', 'Livr√©')">LIVR√â</button><button class="btn btn-red" style="flex:1" onclick="changerStatut('${c.id}', 'Non Livr√©')">√âCHEC</button></div>`;
                l_liv.innerHTML += `<div class="card">${content}</div>`;
            }
        });

        if (isAdminPrincipal && !document.getElementById('tabRH').classList.contains('hidden')) {
            document.getElementById('logsContainer').classList.remove('hidden');
            document.getElementById('listeLogs').innerHTML = logs.map(l => `<div style="padding:6px 0; border-bottom:1px solid #eee;"><span style="color:var(--accent)">[${l.date.split(' ')[1]}]</span> <b>${l.auteur}</b> : ${l.details}</div>`).join('');
        } else { document.getElementById('logsContainer').classList.add('hidden'); }
        renderCompta();
    }

    function renderCompta() {
        const type = document.getElementById('typeFiltre').value, ref = new Date(document.getElementById('dateRef').value);
        let bilan = {}, details = {}, counts = {};
        courses.filter(c => c.statut === 'Livr√©').forEach(c => {
            const d = new Date(c.date);
            if((type === 'jour' && d.toDateString() === ref.toDateString()) || (type === 'semaine' && (ref - d) / 86400000 < 7 && (ref - d) >= 0) || (type === 'mois' && d.getMonth() === ref.getMonth() && d.getFullYear() === ref.getFullYear())) {
                bilan[c.livreur] = (bilan[c.livreur] || 0) + c.tarif;
                counts[c.livreur] = (counts[c.livreur] || 0) + 1;
                if(!details[c.livreur]) details[c.livreur] = []; details[c.livreur].push(c);
            }
        });

        let h = `<table class="fin-table"><tr><th>NOM</th><th>TOTAL</th><th>GAINS</th><th>P'GO</th></tr>`, tT=0, tG=0, tP=0;
        for(let n in bilan) {
            let pP = (staff[n] && staff[n].role === 'livreur_packngo') ? Math.round(bilan[n]*0.7) : Math.round(bilan[n]*0.3);
            let pL = bilan[n] - pP; tT+=bilan[n]; tG+=pL; tP+=pP;
            h += `<tr><td>${n}</td><td>${bilan[n]}</td><td style="color:var(--done)">${pL}</td><td>${pP}</td></tr>`;
        }
        document.getElementById('tableComptaContainer').innerHTML = Object.keys(bilan).length ? h + `<tr class="total-row"><td>TOTAL</td><td>${tT}</td><td>${tG}</td><td>${tP}</td></tr></table>` : "<p style='text-align:center;font-size:0.7rem;color:#999;padding:20px'>Vide</p>";

        let detH = "";
        for(let n in details) {
            detH += `<div style="margin-bottom:25px;"><div class="detail-header"><span class="detail-name">${n}</span><div style="display:flex;align-items:center;gap:8px;"><span style="font-size:0.6rem;font-weight:700;color:#777;text-transform:uppercase;">Courses</span><span class="count-number">${counts[n]}</span></div></div>`;
            details[n].forEach(c => { 
                detH += `<div class="compta-detail-row"><span><b style="color:var(--dark);">${c.client}</b> (üìç${c.dest})</span><b>${c.tarif} F</b></div>`; 
            });
            detH += `</div>`;
        }
        document.getElementById('detailsComptaContainer').innerHTML = detH || "<p style='text-align:center;font-size:0.7rem;color:#999;padding:20px'>Vide</p>";
    }
</script>
</body>
</html>
